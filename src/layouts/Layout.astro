---
import '../styles/global.css';
import '@fontsource-variable/newsreader';
import { Constant } from '../utils/constant';
import Footer from '../components/common/Footer.tsx';
import SmoothScroll from '../components/core/SmoothScroll.tsx';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={Constant.description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="mt-24 leading-normal tracking-normal font-delight text-[16px] text-[#e1e1e1]">
		<SmoothScroll client:load>
			<slot/>
			<div class="font-delight border-t border-[#2e2e2e] py-3 mt-14">
				<Footer client:load/>
			</div>
		</SmoothScroll>
	</body>
</html>